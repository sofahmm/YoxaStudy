<Page x:Class="YoxaStudy.Pages.FirstDayFabricPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:YoxaStudy.Pages"
      mc:Ignorable="d" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="FirstDayFabricPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Image Source="/Resurses/user.jpg"
               Grid.RowSpan="3"
               Height="180"
               VerticalAlignment="Top"/>
        <TextBlock Text="Флегматов Енокентий"
                   FontSize="22"
                   VerticalAlignment="Bottom"
                   Height="50"
                   TextWrapping="Wrap"
                   Grid.Row="2"
                   TextAlignment="Center"/>

        <Button x:Name="firstDayBtn"
                Click="firstDayBtn_Click"
                Grid.Row="3"
                Height="80"
                Background="SlateGray">
            <TextBlock TextWrapping="Wrap"
                       Text="День первый: ткани"
                       TextAlignment="Center"
                       FontSize="20"
                       FontWeight="DemiBold"/>
        </Button>
        <Button x:Name="secondDayBtn"
                Click="secondDayBtn_Click"
                Grid.Row="4"
                Height="80">
            <TextBlock Text="День второй: оборудование"
                       TextWrapping="Wrap"
                       FontSize="20"
                       TextAlignment="Center"/>
        </Button>
        <Button x:Name="thirdDayBtn"
                Click="thirdDayBtn_Click"
                Grid.Row="5"
                Height="80">
            <TextBlock Text="День третий: футболки, лонгсливы, свитшоты"
                       TextWrapping="Wrap"
                       FontSize="20"
                       TextAlignment="Center"/>
        </Button>
        <Button x:Name="forthDayBtn"
                Click="forthDayBtn_Click"
                Grid.Row="6"
                Height="80">
            <TextBlock Text="День четвертый: брюки, шорты, леггинсы"
                       TextWrapping="Wrap"
                       FontSize="19"
                       TextAlignment="Center"/>
        </Button>
        <Button x:Name="fivethDayBtn"
                Click="fivethDayBtn_Click"
                Grid.Row="7"
                Height="80">
            <TextBlock Text="День пятый: сборка"
                       TextWrapping="Wrap"
                       FontSize="20"
                       TextAlignment="Center"/>
        </Button>
        <Button x:Name="sixthDayBtn"
                Click="sixthDayBtn_Click"
                Grid.Row="8"
                Height="80">
            <TextBlock Text="День шестой: итоговый тест"
                       TextWrapping="Wrap"
                       FontSize="20"
                       TextAlignment="Center"/>
        </Button>
        <Button x:Name="logOutBtn"
                Click="logOutBtn_Click"
                Grid.Row="9"
                Height="80">
            <TextBlock Text="ВЫЙТИ"
                       TextWrapping="Wrap"
                       FontSize="20"
                       TextAlignment="Center"/>
        </Button>

        <StackPanel Orientation="Horizontal"
                    Grid.Column="1"
                    Grid.ColumnSpan="3"
                    Grid.Row="2"
                    Grid.RowSpan="7">
            <Expander
                  Background="LightGray"
                    ExpandDirection="Right"
                BorderBrush="Black"
                BorderThickness="2"
                Margin="20 0 20 0"
                    materialDesign:ExpanderAssist.VerticalHeaderPadding="20,35,20,5"
                  HorizontalAlignment="Stretch"
                  HorizontalContentAlignment="Center">
                <Expander.Header>
                    <TextBlock Text="Футер"
                           FontSize="20">
                        <TextBlock.LayoutTransform>
                            <RotateTransform
                                     Angle="90" />
                        </TextBlock.LayoutTransform>
                    </TextBlock>
                </Expander.Header>
                <Expander.Content>
                    <ScrollViewer>
                        <StackPanel Orientation="Vertical">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Resurses/futer.jpg"
                               Height="140"
                               Width="140"/>
                            <Image Source="/Resurses/futerInside.jpg"
                                       Margin="10 0 10 0"
                               Height="155"
                               Width="155"/>
                        </StackPanel>

                        <TextBlock TextWrapping="Wrap"
                                       Width="250"
                                   FontSize="18">
                                   Это приятная
                                   тактильно хлопковая ткань,
                                   мягкая, гладкая с внешней стороны, 
                                   с изнанки присутствует небольшой начес. 
                                   Прочная структура ткани получается за счет
                                   переплетения нитей петлями, из-за этого
                                   существует подразделение этого материала.
                        </TextBlock>
                            <TextBlock Text="Выпускается 3 вида футера:"
                                       FontSize="18"/>
                            <TextBlock TextWrapping="Wrap"
                                    Width="250"
                                   FontSize="18">
                            1. Сплетенный из 1 нити.
                            Нежная и бархатистая изнаночная сторона 
                            полотна делает ее идеальной для пошива 
                            детских вещей.
                        </TextBlock>
                            <Image Source="/Resurses/futerOneTread.jpg"
                               Height="200"
                               Width="200"/>

                            <CheckBox Content="Изучено"
                                      FontSize="20"
                                      Checked="CheckBox_Checked"/>
                        </StackPanel>
                    </ScrollViewer>
                </Expander.Content>
               
            </Expander>
            <Expander
                  Background="LightGray"
                    ExpandDirection="Right"
                    materialDesign:ExpanderAssist.VerticalHeaderPadding="20,35,20,5"
                  HorizontalAlignment="Stretch"
                BorderBrush="Black"
                BorderThickness="2"
                Margin=" 0 0 20 0"
                  HorizontalContentAlignment="Center">
                <Expander.Header>
                    <TextBlock Text="Трикотаж"
                           FontSize="20">
                        <TextBlock.LayoutTransform>
                            <RotateTransform
                                     Angle="90" />
                        </TextBlock.LayoutTransform>
                    </TextBlock>
                </Expander.Header>
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Resurses/fabric.png"
                       Height="70"
                       Width="70"/>
                    <TextBlock Text="wuw"
                           FontSize="18"/>
                </StackPanel>
            </Expander>
            <Expander
                  Background="LightGray"
                    ExpandDirection="Right"
                    materialDesign:ExpanderAssist.VerticalHeaderPadding="20,35,20,5"
                  HorizontalAlignment="Stretch"
                BorderBrush="Black"
                BorderThickness="2"
                Margin=" 0 0 20 0"
                  HorizontalContentAlignment="Center">
                <Expander.Header>
                    <TextBlock Text="Трикотаж"
                           FontSize="20">
                        <TextBlock.LayoutTransform>
                            <RotateTransform
                                     Angle="90" />
                        </TextBlock.LayoutTransform>
                    </TextBlock>
                </Expander.Header>
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Resurses/fabric.png"
                       Height="70"
                       Width="70"/>
                    <TextBlock Text="wuw"
                           FontSize="18"/>
                </StackPanel>
            </Expander>
            <Expander
                  Background="LightGray"
                    ExpandDirection="Right"
                    materialDesign:ExpanderAssist.VerticalHeaderPadding="20,35,20,5"
                  HorizontalAlignment="Stretch"
                BorderBrush="Black"
                BorderThickness="2"
                Margin=" 0 0 20 0"
                  HorizontalContentAlignment="Center">
                <Expander.Header>
                    <TextBlock Text="Трикотаж"
                           FontSize="20">
                        <TextBlock.LayoutTransform>
                            <RotateTransform
                                     Angle="90" />
                        </TextBlock.LayoutTransform>
                    </TextBlock>
                </Expander.Header>
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Resurses/fabric.png"
                       Height="70"
                       Width="70"/>
                    <TextBlock Text="wuw"
                           FontSize="18"/>
                </StackPanel>
            </Expander>
        </StackPanel>
        
        
    </Grid>
</Page>
